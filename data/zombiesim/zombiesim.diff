+    "import starsim as ss\n",
+    "import matplotlib.pyplot as plt\n",
+    "\n",
+    "# Define the model\n",
+    "class WealthModel(ss.Module):\n",
+    "    \"\"\" A simple wealth transfer model\"\"\"\n",
+    "    \n",
+    "    def init_post(self, bins=10):\n",
+    "        \"\"\" Define custom model attributes \"\"\"\n",
